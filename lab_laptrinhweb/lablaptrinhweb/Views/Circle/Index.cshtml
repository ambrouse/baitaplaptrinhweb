@model lablaptrinhweb.Models.circle
@{
    ViewBag.Title = "Index";
}

<h2>Calculating for the Circle</h2>
@using (Html.BeginForm("Index", "circle", FormMethod.Post))
{
                @Html.AntiForgeryToken()
    <div class="form-group">
        <lable for="radius"> Input your radius</lable>
        @Html.TextBoxFor(m => m.Radius, new
   {
       @class = "form-control",
       @name = "radius",
       @autofocus = "true"
   })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="calculate" />
        <input type="reset" class="btn btn-default" value="continue..." onclick='location.href=@Url.Action("", "circle/")'/>
    </div>
    <div class="form-group">
        <h3>@ViewBag.Message</h3>
    </div>
}

